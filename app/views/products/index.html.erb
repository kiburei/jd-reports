<p id="notice"><%= notice %></p>


<div class="dashboard">
  <div class="row">
    <div class="card col s4 green">
      <h3>Total Sales</h3>
      <%= number_to_currency(rand(1000..10000), :unit => "KES ") %>
    </div>
    <div class="card col s4 blue">
      <h3>Today's Sales</h3>
      <%= number_to_currency(rand(1000..10000), :unit => "KES ") %>
    </div>
    <div class="card col s4 purple">
      <h3>Day's Margin</h3>
      <%= number_to_currency(rand(1000..10000), :unit => "KES ") %>
    </div>
  </div>
</div>

<%= link_to 'Open Day', root_url, class: 'btn green lighten-3' %>
<%= link_to 'Close Day', root_url, class: 'btn red lighten-3' %>

    <h1>Report</h1>

    <table class="striped">
      <thead>
        <tr>
          <th>Item</th>
          <th>Opening stock</th>
          <th>Purchases</th>
          <th>Total stock</th>
          <th>Total sold</th>
          <th>Buying cost</th>
          <th>Total buying cost</th>
          <th>Selling cost</th>
          <th>Margin</th>
          <th>Total margin</th>
          <th>Total sales</th>
          <th>Closing stock</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.opening_stock %></td>
            <td><%= product.purchases %></td>
            <td><%= product.total_stock %></td>
            <td><%= product.total_sold %></td>
            <td><%= number_to_currency(product.buying_cost, :unit => "KES ") %></td>
            <td><%= number_to_currency(product.total_buying_cost, :unit => "KES ") %></td>
            <td><%= number_to_currency(product.selling_cost, :unit => "KES ") %></td>
            <td><%= number_to_currency(product.margin, :unit => "KES ") %></td>
            <td><%= number_to_currency(product.total_margin, :unit => "KES ") %></td>
            <td><%= number_to_currency(product.total_sales, :unit => "KES ") %></td>
            <td><%= product.closing_stock %></td>
            <td><%= link_to 'Reload', reload_path(product), class: 'btn green lighten-3' %></td>
            <td><%= link_to 'edit', edit_product_path(product), class: 'btn lighten-3' %></td>
            <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn red lighten-3' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

<%= link_to 'New Product', new_product_path, class: 'btn green lighten-3' %>
